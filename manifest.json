{
    "manifest_version": 2,
    "name": "Referral Generator",
    "version": "1.0",
    "description": "Generate referral messages for job applications.",
    "browser_action": {
      "default_popup": "./src/popup.html",
      "default_icon" : "./src/images/copy-512.png"
    },
    "permissions": ["clipboardWrite", "activeTab", "storage"],
    "content_security_policy": "script-src 'self'; object-src 'self';",
    "web_accessible_resources": [
      "popup_script.js"
    ]
  }